# タイムゾーン
TZ=Asia/Tokyo

# ========================
# MySQL (db サービス)
# ========================
# ※ 公開リポでは “例値” のままにして、本番では必ず強固なパスワードに変更！
MYSQL_ROOT_PASSWORD=change-me-root
MYSQL_DATABASE=portfolio
MYSQL_USER=app
MYSQL_PASSWORD=change-me-app

# ローカルでMySQLに接続したい時だけ 3306 を開ける
# 例: DB_PORT_PUBLIC=3306 で localhost:3306 -> db:3306
# いらなければ docker-compose.yml 側の行を削除
DB_PORT_PUBLIC=3306

# ========================
# API (api サービス)
# ========================
# 例: mysql://ユーザー:パスワード@ホスト:ポート/DB名
DATABASE_URL=mysql://app:${MYSQL_PASSWORD}@db:3306/${MYSQL_DATABASE}

# 開発ダミーキー（本番キーは絶対ここに置かない！）
API_KEY=dev-secret-change-me

# Node/HTTP
NODE_ENV=development
API_PORT=4000
API_PORT_PUBLIC=4000

# Prisma Studio を開ける必要がある場合だけ
PRISMA_STUDIO_PORT_PUBLIC=5555
